<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>

<body>
    <style>
        body{
            background-color: aliceblue;
            text-align: center;
        }
        table th,td{
            padding-left: 70px;
        }
    </style>
    <h1>clients information</h1>
     <div class="table-data">

    <% if(clients!='') {%>
    
        <table>
            <tr>
                <th>id</th>
                <th>image</th>
                <th>name</th>
                <th>email</th>
                <th>phone</th>
                <th>action</th>
            </tr>
           <% clients.forEach((row,index) =>{%>
        
            <tr>
                <td><%= index %></td>
                <td><img src="" alt=""></td>
                <td><%= row.name %></td>
                <td><%= row.email %></td>
                <td><%= row.phone %></td>
                <td>
                    <a href="/edit/<%= row._id %>">edit</a>
                    <a href="/delete/<%= row._id %>">delete</a>
                </td>
            </tr>
        
        <%})%>
        </table>  
    <%} else {%>

        <h1>user not found</h1>
        <%}%>
       
     </div>
    
</body>
</html>