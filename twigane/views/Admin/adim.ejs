<!----------------css styling--------------->
<style>
    body {
        font-family: 'Times New Roman', Times, serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
        
    }

    .contain {
       
        margin: 10px 100px auto 100px;
        padding: 10px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #169a6a;
        color: white;
        font-weight: 600;
        font-size: 16px;
    }

    tr:hover {
        background-color: #f9f9f9;
    }

    input[type="text"] {
        width: 30%;
        padding: 8px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 4px;
        margin-bottom: 10px;
        
    }

    .pagination {
        display: flex;
        justify-content: center;
        list-style-type: none;
        padding: 0;
    }

    .pagination li {
        margin: 10px 5px;
    }

    .pagination a {
        text-decoration: none;
        padding: 5px 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        color: #333;
      
    }

    .pagination a.active {
        background-color: #007bff;
        color: #fff;
        border-color: #007bff;
      
    }
    @media (max-width: 1200px) {
        .contain {
            padding: 10px;
            margin: 10px 50px auto 50px;
            overflow-x: auto;
        }
    }
    @media (max-width: 820px) {
        .contain {
            padding: 10px;
            margin: 10px 10px auto 10px;
            overflow-x: auto;
        }
    }

</style>



<script>
    const table = document.getElementById('dataTable');
    const searchInput = document.getElementById('searchInput');
    const pagination = document.getElementById('pagination');

    let currentPage = 1;
    const rowsPerPage = 2;
    let totalRows = table.rows.length - 1; // excluding header row

    function displayRows(page) {
        const start = (page - 1) * rowsPerPage + 1; // excluding header row
        const end = start + rowsPerPage;

        for (let i = 1; i < table.rows.length; i++) {
            table.rows[i].style.display = (i >= start && i < end) ? 'table-row' : 'none';
        }
    }

    function displayPagination() {
        const totalPages = Math.ceil(totalRows / rowsPerPage);

        let paginationContent = '';
        for (let i = 1; i <= totalPages; i++) {
            paginationContent += `<li><a href="#" class="${currentPage === i ? 'active' : ''}" onclick="changePage(${i})">${i}</a></li>`;
        }

        pagination.innerHTML = paginationContent;
    }

    function changePage(page) {
        currentPage = page;
        displayRows(currentPage);
        displayPagination();
    }

    searchInput.addEventListener('input', function() {
        const searchText = this.value.toLowerCase();

        let filteredRows = 0;
        for (let i = 1; i < table.rows.length; i++) {
            let rowText = table.rows[i].textContent.toLowerCase();
            if (rowText.includes(searchText)) {
                table.rows[i].style.display = 'table-row';
                filteredRows++;
            } else {
                table.rows[i].style.display = 'none';
            }
        }

        totalRows = filteredRows;
        currentPage = 1;
        displayPagination();
    });

    displayRows(currentPage);
    displayPagination();
</script>
